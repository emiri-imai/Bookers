<h1>Books</h1>

<table>
   <thead>
    <tr>
     <th class="title">Title</th>
     <th class="body">Body</th>
     <th colespan="3"></th>
    </tr>
   </thead>

 <tbody>
  <% @books.each do |book| %>
  <tr>
    <td class="title"><%= book.title %></td>
    <td class="body"><%= book.body %></td>
    <td class="show"><%= link_to "show", book_path(book.id) %></td>
    <td class="edit"><%= link_to "edit", edit_book_path(book.id) %></td>
    <td class="destroy"><%= link_to "destroy", book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>

 </tr>
 <% end %>

</tbody>
</table>

<div class="form">
<h1>New book</h1>
<%= form_with model: @book, url: books_path, local:true do |f| %>
<% if @book.errors.any? %>
    <h3>error prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    
<h4>Title</h4>
<div class="field"><%= f.text_field :title %></div>
<h4>Body</h4>
<div class="field"><%= f.text_area :body %></div>
<div class="action"><%= f.submit 'Create Book' %></div>
<% end %>
</div>


